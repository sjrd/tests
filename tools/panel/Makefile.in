include ../Makefile.vars
include $(TOPDIR)/Makefile.rules

OZPANEL  = $(OZLIB)/panel

LOCALFILES = \
	configure.oz load.oz make-notes.oz runtime-bar.oz top.oz \
	main.oz dialogs.oz

BITMAPS = \
	panel.xbm zig-zag.xbm lines-lr.xbm lines-rl.xbm \
	grid-25.xbm grid-50.xbm

LOCALBITMAPFILES = ${BITMAPS:%=$(SRCDIR)/bitmaps/%}
LIBFILES = ${LOCALFILES:%.oz=$(OZPANEL)/%.oz}
SRCS = ${LOCALFILES:%.oz=$(SRCDIR)/panel/%.oz}

all:: touch

touch: $(SRCS)
	$(TOUCH) $@

install:: $(OZPANEL) $(LIBFILES) bitmaps

realclean::
	$(RM) touch

bitmaps: $(LOCALBITMAPFILES)
	$(INSTALLFILE) $(LOCALBITMAPFILES) $(OZLIB)/bitmaps

$(OZPANEL):
	$(INSTALLDIR) $@

$(OZPANEL)/%.oz: %.oz
	$(INSTALLSRC) '$<' '$@'

